{
  "name": "recreactive",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "jscs": "jscs --verbose ./src",
    "lint": "jshint --verbose --show-non-errors --config=.jshintrc **/*.js",
    "serve": "browser-sync start --server 'app' --files 'index.html,app/**/*' --no-notify",
    "test": "npm run jscs && npm run lint",
    "watch-app": "watchify -t babelify ./src/app.js -o ./app/scripts/bundle.js -v",
    "watch-specs": "mkdir -p dist && watchify -t babelify ./spec/*.* -o ./dist/specs.js -v"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.1.2",
    "browser-sync": "^2.7.6",
    "browserify": "^10.2.3",
    "esprima-fb": "^14001.1.0-dev-harmony-fb",
    "jscs": "^1.11.3",
    "jshint": "^2.6.3",
    "react": "^0.13.3",
    "reflux": "^0.2.7",
    "watchify": "^3.2.1"
  }
}
