{
  "name": "recreactive",
  "version": "1.0.0",
  "description": "React - recreational sessions",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/unboxit/recreactive.git"
  },
  "bugs": {
    "url": "http://github.com/unboxit/recreactive.git/issues"
  },
  "engines": {
    "node": "4"
  },
  "scripts": {
    "bithound": "bithound check git@github.com:unboxit/recreactive.git",
    "build": "browserify ./src/app.js -o ./app/scripts/bundle.js -t [ babelify --presets [ es2015 react ] ]",
    "build-spec": "mkdir -p dist && browserify ./spec/suite.js -o ./dist/specs.js -t [ babelify --presets [ es2015 react ] ]",
    "eslint": "eslint ./src --ext=.js --ext=.jsx",
    "jscs": "jscs ./src --esnext",
    "lint": "npm run jscs && npm run eslint",
    "pretest": "npm run build && npm run build-spec",
    "serve": "browser-sync start --server 'app' --files 'index.html,app/**/*' --no-notify",
    "test": "npm run lint",
    "test-ci": "testem ci",
    "watch": "watchify -t babelify ./src/app.js -o ./app/scripts/bundle.js -v",
    "watch-spec": "mkdir -p dist && watchify -t babelify ./spec/*.js -o ./dist/specs.js -v"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "bithound": "^1.0.0",
    "browser-sync": "^2.7.6",
    "browserify": "^13.0.0",
    "eslint": "^1.10.3",
    "jasmine": "^2.3.1",
    "jscs": "^2.9.0",
    "testem": "^1.2.2",
    "watchify": "^3.2.1"
  },
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "reflux": "^0.3.0"
  }
}
